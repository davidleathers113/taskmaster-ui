<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Network access for file watcher server and auto-updater -->
  <key>com.apple.security.network.client</key>
  <true/>
  
  <!-- Allow networking for server communication -->
  <key>com.apple.security.network.server</key>
  <true/>
  
  <!-- File access for task management -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>
  
  <!-- Allow reading/writing to user documents -->
  <key>com.apple.security.files.downloads.read-write</key>
  <true/>
  
  <!-- JIT compilation for V8 engine -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>
  
  <!-- Required for Electron applications -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
  <true/>
  
  <!-- Allow execution of unsigned code (required for Electron) -->
  <key>com.apple.security.cs.disable-library-validation</key>
  <true/>
  
  <!-- Hardware acceleration -->
  <key>com.apple.security.device.camera</key>
  <false/>
  
  <!-- Disable microphone access -->
  <key>com.apple.security.device.microphone</key>
  <false/>
  
  <!-- File bookmarks for persistent access -->
  <key>com.apple.security.files.bookmarks.app-scope</key>
  <true/>
  
  <!-- Print functionality -->
  <key>com.apple.security.print</key>
  <true/>
</dict>
</plist>