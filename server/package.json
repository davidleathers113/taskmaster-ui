{
  "name": "taskmaster-file-watcher",
  "version": "2.0.0",
  "type": "module",
  "description": "Secure file watcher server for TaskMaster UI with TypeScript support",
  "main": "dist/file-watcher.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/file-watcher.js",
    "dev": "nodemon --exec \"tsc && node dist/file-watcher.js\"",
    "dev:ts": "nodemon --exec \"tsc && node dist/file-watcher.js\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "audit": "npm audit --audit-level moderate",
    "security-check": "npm audit && npm outdated"
  },
  "dependencies": {
    "@types/chokidar": "^1.7.5",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "electron-log": "^5.4.0",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^11.3.0",
    "ws": "^8.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "taskmaster",
    "file-watcher",
    "websocket",
    "typescript",
    "security",
    "api"
  ]
}
