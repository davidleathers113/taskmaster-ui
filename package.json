{
  "name": "taskmaster-ui",
  "version": "1.0.0",
  "main": "dist/electron/main.cjs",
  "type": "module",
  "description": "TaskMaster Desktop - The most advanced task management desktop application",
  "author": "TaskMaster Team",
  "homepage": "https://github.com/taskmaster/taskmaster-ui",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --config vite.main.config.ts && vite build --config vite.preload.config.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "server:install": "cd server && npm install",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "setup": "npm install && npm run server:install",
    "start:all": "concurrently \"npm run server:dev\" \"npm run dev\" --names \"SERVER,UI\" --prefix-colors \"green,blue\"",
    "security:audit": "npm audit --audit-level moderate && cd server && npm audit --audit-level moderate",
    "security:check": "npm outdated && cd server && npm outdated",
    "security:fix": "npm audit fix && cd server && npm audit fix",
    "security:full": "npm run security:audit && npm run security:check",
    "ci:validate": "npm run typecheck && npm run lint && npm run build && npm run security:audit",
    "pre-commit": "npm run lint && npm run typecheck",
    "start": "NODE_OPTIONS=\"--no-deprecation\" electron-forge start",
    "start:prod": "./run-app.sh",
    "start:dev": "./run-dev.sh",
    "package": "NODE_OPTIONS=\"--no-deprecation\" electron-forge package",
    "make": "NODE_OPTIONS=\"--no-deprecation\" electron-forge make"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.1.8",
    "@mui/material": "^6.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-json-view-lite": "^2.4.1",
    "tailwind-merge": "^2.5.5",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@electron-forge/publisher-github": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "36.3.2",
    "electron-updater": "^6.6.2",
    "electron-vite": "^3.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.16",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.17",
    "terser": "^5.40.0",
    "typescript": "^5.8.3",
    "vite": "^6.0.5"
  }
}
